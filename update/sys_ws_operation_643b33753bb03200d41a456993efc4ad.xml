        <name>Worker Request</name>
        <operation_script><![CDATA[(function process(/*RESTAPIRequest*/ request, /*RESTAPIResponse*/ response) {

	var workerRequest = request.body.data;
	var requestMgr = new ServiceRequestManagement();

	try {
		var assignedWork = requestMgr.assignAvailableWork(workerRequest);

		var result = {};
		if (!gs.nil(assignedWork)) {
			result.assigned = true;
			result.work = assignedWork;
		} else {
			result.assigned = false;
		}
		return result;
	} catch(error) {
		var msg = "Unable to assign work to the worker. Error is: " + error;
		return new sn_ws_err.BadRequestError(msg, workerRequest);
	}

})(request, response);]]></operation_script>
